pipeline{
    agent{
        node{
            label "ssh_node1"
        }
    }
    parameters {
        string defaultValue: 'main', description: 'Checkout Branch', name: 'checkoutBranch'
    }
    stages{
        stage("CleanWorkspace"){
            steps{
                cleanWs()
            }
        }
        stage("checkout source code"){
            steps{
                git branch: "$checkoutBranch", url: 'https://github.com/burakbayramm/java17HelloWorld'
                sh "ls -ltr"
            }
        }
        stage("Hello World"){
            steps{
                sh "pwd"
                sh """
                echo "Hello, my firt pipeline" > hello.txt
                """
            }
        }
        stage("Whoami/Whereami"){
            steps{
                sh "whoami"
                sh "pwd"
            }
        }
        stage("date"){
            steps{
                sh "date"
                
            }
        }
        stage("Archive Text"){
            steps{
                archiveArtifacts allowEmptyArchive: true, artifacts: 'hello.txt', followSymlinks: false
            }
        }
    }

    post {
        always {
            emailext body: 'Finished', subject: 'Job', to: 'burak.bayram@simens.com'
        }
        
    }
}
