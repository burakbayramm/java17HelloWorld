pipeline{
    agent{
        node{
            label "jenkins_ssh_slave_jdk11"
        }
    }
    parameters {
        string defaultValue: 'main', description: 'Checkout Branch', name: 'checkoutBranch'
    }
    stages{
        stage("CleanWorkspace"){
            steps{
                cleanWs()
            }
        }
        stage("checkout source code"){
            steps{
                git branch: "$checkoutBranch", url: 'https://github.com/burakbayramm/java17HelloWorld'
                sh "ls -ltr"
            }
        }
        stage("Build"){
            steps{
                sh "pwd"
                sh """
                echo "Build Started"
                sleep 60
                """
            }
        }
    }

    post {
        always {
            emailext body: 'Finished', subject: 'Job', to: 'burak.bayram@simens.com'
        }
        
    }
}
