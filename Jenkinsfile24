pipeline{
    agent{
        node{
            label "ssh_node1"
        }
    }
    stages{
        stage("CleanWorkspace"){
            steps{
                cleanWs()
            }
        }
        stage("Hello World"){
            steps{
                sh "pwd"
                sh """
                echo "Hello, my firt pipeline" > hello.txt
                sleep 300
                """
            }
        }
        stage("Whoami/Whereami"){
            steps{
                sh "whoami"
                sh "pwd"
            }
        }
        stage("date"){
            steps{
                sh "date"
                
            }
        }
        stage("Archive Text"){
            steps{
                archiveArtifacts allowEmptyArchive: true, artifacts: 'hello.txt', followSymlinks: false
            }
        }
    }

    post {
        always {
            emailext body: 'Finished', subject: 'Job', to: 'burak.bayram@simens.com'
        }
        
    }
}
